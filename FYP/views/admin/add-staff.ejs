<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/Adminnavigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-staff<% } else { %>add-Staff<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="StaffNumber">Staff Number</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'StaffNumber') ? 'invalid' : '' %>"
                    type="text" 
                    name="StaffNumber" 
                    id="StaffNumber" 
                    value="<% if (editing || hasError) { %><%= Staff.StaffNumber %><% } %>">
            </div>
            <div class="form-control">
                <label for="name">Staff Name</label>
                <input 
                
                    type="text" 
                    name="StaffName" 
                    id="StaffName" 
                    value="<% if (editing || hasError) { %><%= Staff.StaffName %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">Position Title </label>
                <input 
                    type="text" 
                    name="Stafftitle" 
                    id="Stafftitle" 
                    value="<% if (editing || hasError) { %><%= Staff.PositionTitle %><% } %>">
            </div>
            <div class="form-control">
                <label for="rating">Staff Rating(1-10)</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'rating') ? 'invalid' : '' %>"
                    type="number" 
                    name="rating" 
                    id="rating" 
                    value="<% if (editing || hasError) { %><%= Staff.StaffRating %><% } %>">
            </div>
            <div class="form-control">
                <label for="Salary">Salary</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'salary') ? 'invalid' : '' %>"
                    type="number" 
                    name="salary" 
                    id="salary" 
                    step="0.01"
                    value="<% if (editing || hasError) { %><%= Staff.Salary %><% } %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" >
            </div>
            
            <% if (editing) { %>
                <input type="hidden" value="<%= Staff._id %>" name="StaffID">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Edit Staff<% } else { %>Add Staff<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>